@model GestaoAutomotiva.Models.Motor
@{
    ViewData["Title"] = "Cadastrar Motor";
}
@* MENSAGENS *@
@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensagem"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Erro"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}
<div class="page-container mt-4 animate__animated animate__fadeInDown">
    <h2 class="text-white mb-4">
    <img src="~/images/Icones/motor.png" width="48" height="48" />  @ViewData["Title"]
    </h2>

    <form method="post">
        @Html.AntiForgeryToken()

        <div class="row mb-3">
            <div class="col-md-4">
                <label asp-for="Nome" class="form-label">Nome do Motor</label>
                <input asp-for="Nome" class="form-control  select-dark" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="PlacaVeiculoDoador" class="form-label">Placa do Veículo Doador</label>
                <input asp-for="PlacaVeiculoDoador" class="form-control" placeholder="A DEFINIR" />
                <span asp-validation-for="PlacaVeiculoDoador" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="NumeroMotor" class="form-label">Número do Motor</label>
                <input asp-for="NumeroMotor" class="form-control" placeholder="A DEFINIR" />
                <span asp-validation-for="NumeroMotor" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label asp-for="Status" class="form-label">Status do Motor</label>
                <select asp-for="Status" class="form-control select-light" asp-items="Html.GetEnumSelectList<GestaoAutomotiva.Models.StatusMotor>()">
                    <option value="">SELECIONE</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="col-md-8">
                <label asp-for="Observacoes" class="form-label">Observações</label>
                <textarea asp-for="Observacoes" class="form-control" placeholder="A DEFINIR" rows="4"></textarea>
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-outline-light px-4">Salvar</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
