@model GestaoAutomotiva.Models.Motor

@{
    ViewData["Title"] = "Excluir Motor";
}


<div class="page-container mt-4 animate__animated animate__fadeInDown">
    <h2 class="text-danger mb-3">
        <i class="bi bi-trash"></i> @ViewData["Title"]
    </h2>

    <p class="mb-4">
        Tem certeza que deseja excluir o motor
        <strong class="text-warning">@Model.Nome</strong>?
    </p>

    <dl class="row">
        <dt class="col-sm-3">Placa do Veículo</dt>
        <dd class="col-sm-9 text-uppercase">@Model.PlacaVeiculoDoador</dd>

        <dt class="col-sm-3">Número do Motor</dt>
        <dd class="col-sm-9 text-uppercase">@Model.NumeroMotor</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9 text-uppercase">@Model.Status</dd>
    </dl>

    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-outline-danger px-4">
                <i class="bi bi-trash-fill"></i> Excluir
            </button>

            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                <i class="bi bi-arrow-left-circle"></i> Cancelar
            </a>
        </div>
    </form>
</div>
