@model GestaoAutomotiva.Models.Motor
@{
    ViewData["Title"] = "Excluir Motor";
}

<div class="container bg-dark bg-opacity-75 text-light rounded p-4 mt-4">
    <h2 class="mb-4 text-danger">Confirmar Exclusão</h2>

    <p>Tem certeza que deseja excluir o motor <strong>@Model.Nome</strong>?</p>

    <dl class="row">
        <dt class="col-sm-3">Placa do Veículo</dt>
        <dd class="col-sm-9">@Model.PlacaVeiculoDoador</dd>

        <dt class="col-sm-3">Número do Motor</dt>
        <dd class="col-sm-9">@Model.NumeroMotor</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>

    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-danger px-4">Excluir</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
        </div>
    </form>
</div>
