@model IEnumerable<GestaoAutomotiva.Models.Motor>
@{
    ViewData["Title"] = "Motores Cadastrados";
}

<div class="container bg-dark bg-opacity-75 text-light rounded p-4 mt-4">
    <h2 class="mb-4">Motores Cadastrados</h2>

    <a asp-action="Create" class="btn btn-success mb-3">Novo Motor</a>

    <table class="table table-dark table-hover align-middle">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Placa Veículo</th>
                <th>Número Motor</th>
                <th>Status</th>
                <th>Observações</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var motor in Model)
            {
                <tr>
                    <td>@motor.Nome?.ToUpper()</td>
                    <td>@motor.PlacaVeiculoDoador?.ToUpper()</td>
                    <td>@motor.NumeroMotor?.ToUpper()</td>
                    <td>@motor.Status.ToString().ToUpper()</td>
                    <td>@motor.Observacoes?.ToUpper()</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@motor.Id" class="btn btn-sm btn-warning me-2">Editar</a>
                        <a asp-action="Delete" asp-route-id="@motor.Id" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
