@model IEnumerable<GestaoAutomotiva.Models.Motor>
@{
    ViewData["Title"] = "Motores Cadastrados";
}


<div class="page-container mt-4 animate__animated animate__fadeInDown">

    @* MENSAGENS *@
@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensagem"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Erro"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}


    <h2 class="text-white mb-4 d-flex align-items-center gap-2">
        <img src="~/images/Icones/motor.png" width="48" height="48" />
        Motores Cadastrados
    </h2>

    <div class="d-flex gap-2 flex-wrap mb-3">
        <a class="btn btn-outline-success" asp-controller="Motor"  asp-action="Create">
            <i class="bi bi-plus-circle"></i> Adicionar Novo Motor
        </a>
    </div>

    <form method="get" class="row g-2 mb-4">
        <div class="col-md-8">
            <input type="text" name="busca" class="form-control text-uppercase" placeholder="Buscar..." value="@Context.Request.Query["busca"]" />
        </div>

        <div class="col-md-4 d-flex gap-2">
            <button type="submit" class="btn btn-outline-light w-100">Pesquisar</button>
            <a asp-action="Index" class="btn btn-outline-secondary w-100">Limpar</a>
        </div>
    </form>


    <!-- TABELA -->
    <table class="table table-dark table-hover align-middle text-white">
        <thead class="table-light text-dark">
            <tr>
                <th>Nome</th>
                <th>Placa Veículo</th>
                <th>Número Motor</th>
                <th>Status</th>
                <th>Observações</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var motor in Model)
            {
                <tr>
                    <td>@motor.Nome?.ToUpper()</td>
                    <td>@motor.PlacaVeiculoDoador?.ToUpper()</td>
                    <td>@motor.NumeroMotor?.ToUpper()</td>
                    <td>
                        @if (motor.Status.ToString().ToUpper() == "DISPONÍVEL")
                        {
                            <span class="badge bg-success fs-7 px-3 py-2 text-uppercase fw-bold">DISPONÍVEL</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary fs-7 px-3 py-2 text-uppercase fw-bold">@motor.Status.ToString().ToUpper()</span>
                        }
                    </td>
                    <td>@motor.Observacoes?.ToUpper()</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@motor.Id" class="btn btn-outline-primary btn-sm me-2">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@motor.Id" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash"></i> Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="6" class="text-center bg-dark">
                    <nav class="mt-3">
                        <ul class="pagination justify-content-center mb-0">
                            @for (int i = 1; i <= (int)ViewBag.TotalPaginas; i++)
                            {
                                <li class="page-item @(i == (int)ViewBag.PaginaAtual ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = i, busca = ViewBag.BuscaNome })">
                                        @i
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </td>
            </tr>
        </tfoot>
    </table>
</div>
