@using GestaoAutomotiva.Models
@{
    ViewData["Title"] = "Cadastro de Acessórios";
}

<div class="page-container mt-4 animate__animated animate__fadeInDown">
    <h2 class="text-light">Cadastro de Acessórios</h2>

    @if (TempData["Mensagem"] != null)
    {
        <div class="alert alert-info mt-3">@TempData["Mensagem"]</div>
    }

    <hr class="text-light mb-4" />

    <!-- LINHA 1: MODELO / CAMBIO / SUSPENSAO -->
    <div class="row mb-5">
        <!-- MODELO -->
        <div class="col-md-4">
            <h5 class="text-light">Adicionar novo Modelo de Carro</h5>
            <form asp-action="CriarModeloCarro" asp-controller="CadastroAcessorios" method="post" class="mb-2">
                @Html.AntiForgeryToken()
                <div class="input-group">
                    <input name="Nome" class="form-control" placeholder="Modelo do carro" />
                    <button type="submit" class="btn btn-success ms-2">Adicionar</button>
                </div>
            </form>
            <table class="table table-dark table-hover align-middle">
                <thead><tr><th>Descrição</th><th>Ação</th></tr></thead>
                <tbody>
                    @foreach (var modelo in (List<Modelo>)ViewBag.Modelos)
                    {
                        <tr>
                            <td>@modelo.Nome</td>
                            <td>
                                <form asp-action="Excluir" asp-route-tipo="modelo" asp-route-id="@modelo.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <button class="btn btn-sm btn-danger">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

        <!-- CAMBIO -->
        <div class="col-md-4">
            <h5 class="text-light">Adicionar novo Câmbio</h5>
            <form asp-action="CriarCambio" asp-controller="CadastroAcessorios" method="post" class="mb-2">
                @Html.AntiForgeryToken()
                <div class="input-group">
                    <input name="descricao" class="form-control" placeholder="Descrição do câmbio" />
                    <button type="submit" class="btn btn-success ms-2">Adicionar</button>
                </div>
            </form>
            <table class="table table-dark table-hover align-middle">
                <thead><tr><th>Descrição</th><th>Ação</th></tr></thead>
                <tbody>
                    @foreach (var cambio in (List<Cambio>)ViewBag.Cambios)
                    {
                        <tr>
                            <td>@cambio.Descricao</td>
                            <td>
                                <form asp-action="Excluir" asp-route-tipo="cambio" asp-route-id="@cambio.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <button class="btn btn-sm btn-danger">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

        <!-- SUSPENSAO -->
        <div class="col-md-4">
            <h5 class="text-light">Adicionar nova Suspensão</h5>
            <form asp-action="CriarSuspensao" asp-controller="CadastroAcessorios" method="post" class="mb-2">
                @Html.AntiForgeryToken()
                <div class="input-group">
                    <input name="descricao" class="form-control" placeholder="Descrição da suspensão" />
                    <button type="submit" class="btn btn-success ms-2">Adicionar</button>
                </div>
            </form>
            <table class="table table-dark table-hover align-middle">
                <thead><tr><th>Descrição</th><th>Ação</th></tr></thead>
                <tbody>
                    @foreach (var s in (List<Suspensao>)ViewBag.Suspensoes)
                    {
                        <tr>
                            <td>@s.Descricao</td>
                            <td>
                                <form asp-action="Excluir" asp-route-tipo="suspensao" asp-route-id="@s.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <button class="btn btn-sm btn-danger">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- LINHA 2: RODAS / CARROCERIA / CAPOTA -->
    <div class="row mb-5">
        <!-- RODAS -->
        <div class="col-md-4">
            <h5 class="text-light">Adicionar novas Rodas/Pneus</h5>
            <form asp-action="CriarRodasPneus" asp-controller="CadastroAcessorios" method="post" class="mb-2">
                @Html.AntiForgeryToken()
                <div class="input-group">
                    <input name="descricao" class="form-control" placeholder="Descrição das rodas/pneus" />
                    <button type="submit" class="btn btn-success ms-2">Adicionar</button>
                </div>
            </form>
            <table class="table table-dark table-hover align-middle">
                <thead><tr><th>Descrição</th><th>Ação</th></tr></thead>
                <tbody>
                    @foreach (var r in (List < RodaPneu >)ViewBag.RodasPneus)
                    {
                        <tr>
                            <td>@r.Descricao</td>
                            <td>
                                <form asp-action="Excluir" asp-route-tipo="rodaspneus" asp-route-id="@r.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <button class="btn btn-sm btn-danger">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- CARROCERIA -->
        <div class="col-md-4">
            <h5 class="text-light">Adicionar nova Carroceria</h5>
            <form asp-action="CriarCarroceria" asp-controller="CadastroAcessorios" method="post" class="mb-2">
                @Html.AntiForgeryToken()
                <div class="input-group">
                    <input name="descricao" class="form-control" placeholder="Descrição da carroceria" />
                    <button type="submit" class="btn btn-success ms-2">Adicionar</button>
                </div>
            </form>
            <table class="table table-dark table-hover align-middle">
                <thead><tr><th>Descrição</th><th>Ação</th></tr></thead>
                <tbody>
                    @foreach (var c in (List<Carroceria>)ViewBag.Carrocerias)
                    {
                        <tr>
                            <td>@c.Descricao</td>
                            <td>
                                <form asp-action="Excluir" asp-route-tipo="carroceria" asp-route-id="@c.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <button class="btn btn-sm btn-danger">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- CAPOTA -->
        <div class="col-md-4">
            <h5 class="text-light">Adicionar nova Capota</h5>
            <form asp-action="CriarCapota" asp-controller="CadastroAcessorios" method="post" class="mb-2">
                @Html.AntiForgeryToken()
                <div class="input-group">
                    <input name="descricao" class="form-control" placeholder="Descrição da capota" />
                    <button type="submit" class="btn btn-success ms-2">Adicionar</button>
                </div>
            </form>
            <table class="table table-dark table-hover align-middle">
                <thead><tr><th>Descrição</th><th>Ação</th></tr></thead>
                <tbody>
                    @foreach (var cap in (List<Capota>)ViewBag.Capotas)
                    {
                        <tr>
                            <td>@cap.Descricao</td>
                            <td>
                                <form asp-action="Excluir" asp-route-tipo="capota" asp-route-id="@cap.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <button class="btn btn-sm btn-danger">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
