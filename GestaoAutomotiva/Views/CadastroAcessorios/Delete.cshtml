@model GestaoAutomotiva.Models.AcessoriosCarro

@{
    ViewData["Title"] = "Excluir Acessórios";
}
<div class="page-container mt-4 animate__animated animate__fadeInDown">
    <h2 class="text-danger">@ViewData["Title"]</h2>

    <h4 class="text-light">Tem certeza que deseja excluir este conjunto de acessórios?</h4>

    <div class="mt-4 text-light">
        <p><strong>Motor:</strong> @Model.Motor?.Nome</p>
        <p><strong>Câmbio:</strong> @Model.Cambio?.Descricao</p>
        <p><strong>Suspensão:</strong> @Model.Suspensao?.Descricao</p>
        <p><strong>Rodas:</strong> @Model.Roda?.Descricao</p>
        <p><strong>Pneus:</strong> @Model.Pneu?.Descricao</p>
        <p><strong>Santo Antônio:</strong> @Model.SantoAntonio?.Descricao</p>
        <p><strong>Carroceria:</strong> @Model.Carroceria?.Descricao</p>
        <p><strong>Capota:</strong> @Model.Capota?.Descricao</p>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mt-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-danger">Excluir</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
<footer style="margin-top: 200px;"></footer>