@model GestaoAutomotiva.Models.Carro

<h2 class="text-light">Excluir Carro</h2>

<p>Tem certeza que deseja excluir o carro <strong>@Model.IdCarro</strong> <strong>@Model.Modelo</strong>  ?</p>

<form method="post">
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
