@model IEnumerable<GestaoAutomotiva.Models.Carro>

<h2 class="text-light">Lista de Carro/Cliente</h2>

<a href="@Url.Action("Create", "Carro")" class="btn btn-outline-light mb-3">Adicionar Novo Carro</a>
<a href="@Url.Action("Create", "CadastroAcessorios")" class="btn btn-outline-success mb-3">Criar Acessórios</a>


<form method="get" class="mb-3 d-flex gap-2">
    <input type="text" name="busca" class="form-control" placeholder="Buscar por carro ou cliente..." value="@Context.Request.Query["busca"]" />
    <select name="tipoManutencao" class="form-control">
        <option value="">Todos</option>
        <option value="Producao" selected="@(Context.Request.Query["tipoManutencao"] == "Producao")">Produção</option>
        <option value="Revisao" selected="@(Context.Request.Query["tipoManutencao"] == "Revisao")">Revisão</option>
    </select>

    <button type="submit" class="btn btn-outline-light">Pesquisar</button>
    <a asp-action="Index" class="btn btn-secondary">Limpar</a>
</form>


<div class="table-responsive">
    <table class="table table-dark table-hover">
        <thead>
            <tr>
            <tr>
                <th>Código</th>
                <th>Cliente</th>
                <th>Modelo</th>                
                <th>Cor</th>                
                @* <th>CPF</th>
                <th>Telefone</th>*@
                <th>Motor</th>
                <th>Câmbio</th>
               @* <th>Suspensão</th> 
                <th>Rodas/Pneus</th>*@
                <th>Carroceria</th>
                <th>Capota</th>
                <th>Tipo Manutenção</th>
                <th>Ações</th>
            </tr>           
        </thead>
        <tbody>
            @foreach (var carro in Model)
            {
                <tr>
                    <td>@carro.IdCarro?.ToUpper()</td>
                    <td>@(carro.Cliente?.Nome?.ToUpper() ?? "N/A")</td>
                    <td>@(carro.Modelo?.Nome?.ToUpper() ?? "N/A")</td>                   
                    <td>@(carro.Cor?.ToUpper() ?? "N/A")</td>
                    @* <td>@(carro.Cliente?.CPF?.ToUpper() ?? "N/A")</td> *@
                    @* <td>@(carro.Cliente?.Telefone?.ToUpper() ?? "N/A")</td> *@
                    <td>@(carro.Acessorios?.Motor?.Nome?.ToUpper() ?? "N/A")</td>
                    <td>@(carro.Acessorios?.Cambio?.Descricao?.ToUpper() ?? "N/A")</td>
                    @* <td>@(carro.Acessorios?.Suspensao?.Descricao?.ToUpper() ?? "N/A")</td> *@
                    @* <td>@(carro.Acessorios?.RodasPneus?.Descricao?.ToUpper() ?? "N/A")</td> *@
                    <td>@(carro.Acessorios?.Carroceria?.Descricao?.ToUpper() ?? "N/A")</td>
                    <td>@(carro.Acessorios?.Capota?.Descricao?.ToUpper() ?? "N/A")</td>
                    <td>@carro.TipoManutencao</td>
                    <td>
                        <div class="d-flex flex-column gap-2">
                            <a asp-action="Edit" asp-route-id="@carro.Id" class="btn btn-warning btn-sm w-100">Editar</a>
                            <a asp-action="Delete" asp-route-id="@carro.Id" class="btn btn-danger btn-sm w-100">Excluir</a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
        <tfoot>
            <tr>
                <td colspan="13" class="text-center bg-dark">
                    <nav>
                        <ul class="pagination justify-content-center mb-0">
                            @for (int i = 1; i <= (int)ViewBag.TotalPaginas; i++)
                            {
                                <li class="page-item @(i == (int)ViewBag.PaginaAtual ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = i, busca = ViewBag.BuscaNome, tipoManutencao = ViewBag.TipoManutencao })">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </td>
            </tr>
        </tfoot>
    </table>
</div>
