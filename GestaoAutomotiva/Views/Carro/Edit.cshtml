@model GestaoAutomotiva.Models.Carro

<h2 class="text-light">Editar Carro/Cliente</h2>

<form method="post">
    <div class="row">
        <!-- Código do Carro -->
        <div class="col-md-6">
            <div class="form-group">
                <label for="IdCarro">Código do Carro</label>
                <input type="text" id="IdCarro" name="IdCarro" class="form-control" asp-for="IdCarro" required />
            </div>
        </div>

        <!-- Modelo (Dropdown de Carros) -->
        <div class="col-md-6">
            <div class="form-group">
                <label for="Modelo">Modelo</label>
                <select asp-for="Modelo" class="form-control" asp-items="@(new SelectList(ViewBag.Carros, "Modelo", "Modelo", Model.Modelo))" required>
                    <option value="">Selecione o modelo</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <!-- Cor -->
        <div class="col-md-6">
            <div class="form-group">
                <label for="Cor">Cor</label>
                <input type="text" id="Cor" name="Cor" class="form-control" asp-for="Cor" required />
            </div>
        </div>
       
            <!-- Cliente -->
            <div class="col-md-6">
                <div class="form-group">
                    <label for="ClienteId">Cliente</label>
                    <select asp-for="ClienteId" class="form-control" asp-items="@(new SelectList(ViewBag.Clientes, "Id", "Nome"))" required>
                        <option value="">Selecione um cliente</option>
                    </select>
                </div>
            </div>
        
    </div>

    <!-- Botões de Salvar e Cancelar -->
    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-outline-light">Salvar</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </div>
</form>
