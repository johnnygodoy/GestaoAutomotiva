@model GestaoAutomotiva.Models.Atividade
@{
    ViewData["Title"] = "Editar Atividade";
}
<h2 class="text-light">Editar Atividade</h2>

<form asp-action="Edit" method="post" class="mt-4">
    <input type="hidden" asp-for="Id" />

    <!-- Primeira linha de campos -->
    <div class="row">
        <div class="col-md-6">
            <label class="form-label text-light">Funcionário</label>
            <select asp-for="FuncionarioId" class="form-control"
                    asp-items="@(ViewBag.Funcionarios as SelectList)">
                <option value="">-- Selecione --</option>
            </select>
        </div>

        <div class="col-md-6">
            <label class="form-label text-light">Serviço</label>
            <select asp-for="ServicoId" class="form-control"
                    asp-items="@(ViewBag.Servicos as SelectList)">
                <option value="">-- Selecione --</option>
            </select>
        </div>
    </div>

    <!-- Segunda linha de campos -->
    <div class="row mt-3">
        <div class="col-md-6">
            <label asp-for="CarroId" class="text-light">Modelo do Carro</label>
            <select asp-for="CarroId" class="form-control" asp-items="ViewBag.Carros">
                <option value="">Selecione um modelo</option>
            </select>
            <span asp-validation-for="CarroId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="CarroId" class="text-light">Código do Carro</label>
            <input asp-for="CarroId" class="form-control" />
            <span asp-validation-for="CarroId" class="text-danger"></span>
        </div>
    </div>

    <!-- Terceira linha de campos -->
    <div class="row mt-3">
        <div class="col-md-6">
            <label asp-for="DataInicio" class="text-light">Data de Início</label>
            <input asp-for="DataInicio" type="date" class="form-control" />
            <span asp-validation-for="DataInicio" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Status" class="text-light">Status</label>
            <select asp-for="Status" class="form-control">
                <option value="Em Andamento">Em Andamento</option>
                <option value="Finalizado">Finalizado</option>
                <option value="Cancelado">Cancelado</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>

    <!-- Botões Salvar e Cancelar -->
    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-success">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
