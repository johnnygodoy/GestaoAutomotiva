@model GestaoAutomotiva.Models.Atividade

@{
    ViewData["Title"] = "Excluir Atividade";
}

<div class="container bg-dark bg-opacity-75 text-light rounded p-4 mt-4">
    <h2 class="text-danger">Confirmar Exclusão</h2>

    <div class="alert alert-warning">
        Tem certeza que deseja excluir a atividade do carro <strong>@Model.Carro</strong>
        Código do carro <strong>@Model.CarroId</strong> executada por
        <strong>@Model.Funcionario?.Nome</strong>?
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>