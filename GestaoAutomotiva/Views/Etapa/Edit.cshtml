@model GestaoAutomotiva.Models.Etapa

@{
    ViewData["Title"] = "Editar Etapa";
}

<h2 class="text-light text-center mb-4">✏️ Editar Etapa de Produção</h2>

<form method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="Nome" class="text-light">Nome da Etapa:</label>
        <input type="text" class="form-control" id="Nome" name="Nome" value="@Model.Nome" required />
    </div>

    <div class="form-group mt-3">
        <label for="Ordem" class="text-light">Ordem da Etapa:</label>
        <input type="number" class="form-control" id="Ordem" name="Ordem" value="@Model.Ordem" required />
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-success">Salvar</button>
        <a href="@Url.Action("Index", "Etapa")" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
