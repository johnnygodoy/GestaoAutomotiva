@model GestaoAutomotiva.Models.ViewModels.EtapaViewModel

@{
    ViewData["Title"] = "Cadastro de Etapas";
}

<div class="page-container mt-4 animate__animated animate__fadeInDown">
    <h2 class="text-white mb-4 d-flex align-items-center gap-2">
        <img src="~/images/Icones/etapas.png" width="48" height="48" />
        @ViewData["Title"]
    </h2>

    <!-- Formulário -->
    <form method="post" asp-action="Create">
        @Html.AntiForgeryToken()

        <div class="row g-2 align-items-end mb-4">
            <!-- Campo Nome -->
            <div class="col-md-6">
                <label asp-for="Etapa.Nome" class="form-label">Nome da Etapa</label>
                <input asp-for="Etapa.Nome" class="form-control text-uppercase" placeholder="Ex: Pintura, Montagem..." />
                <span asp-validation-for="Etapa.Nome" class="text-danger small d-block mt-1"></span>
            </div>

            <!-- Campo Ordem -->
            <div class="col-md-3">
                <label asp-for="Etapa.Ordem" class="form-label">Ordem</label>
                <input asp-for="Etapa.Ordem" type="number" class="form-control" />
                <span asp-validation-for="Etapa.Ordem" class="text-danger small d-block mt-1"></span>
            </div>

            <!-- Botões -->
            <div class="col-md-3">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-outline-success w-100">
                        <i class="bi bi-plus-circle"></i> Adicionar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-arrow-left-circle"></i> Cancelar
                    </a>
                </div>
            </div>
        </div>
    </form>


    <!-- Tabela de Etapas -->
    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle text-white">
            <thead class="table-light text-dark">
                <tr>
                    <th>Nome</th>
                    <th>Ordem</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ListaEtapas != null && Model.ListaEtapas.Any())
                {
                    foreach (var etapa in Model.ListaEtapas.OrderBy(e => e.Ordem))
                    {
                        <tr>
                            <td class="text-uppercase">@etapa.Nome</td>
                            <td>@etapa.Ordem</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Edit" asp-route-id="@etapa.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@etapa.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Excluir
                                    </a>

                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">Nenhuma etapa cadastrada.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Paginação -->
    <nav class="mt-4">
        <ul class="pagination justify-content-center mb-0">
            @for (int i = 1; i <= Model.TotalPaginas; i++)
            {
                <li class="page-item @(i == Model.PaginaAtual ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
