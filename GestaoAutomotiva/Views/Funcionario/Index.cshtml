@model IEnumerable<GestaoAutomotiva.Models.Funcionario>

<div class="page-container mt-4 animate__animated animate__fadeInDown">

    <h2 class="text-white mb-4 d-flex align-items-center gap-2">
        <img src="~/images/Icones/funcionario.png" width="48" height="48" />
        Funcionários
    </h2>


    <div class="d-flex gap-2 flex-wrap mb-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Adicionar Novo Funcionário
        </a>
    </div>

    <form method="get" class="mb-3 d-flex gap-2 flex-wrap">
        <input type="text" name="busca" class="form-control text-uppercase" placeholder="Buscar por nome ou especialidade..." value="@ViewBag.BuscaNome" />
        <button type="submit" class="btn btn-outline-light">Pesquisar</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
    </form>

    <table class="table table-dark table-hover align-middle text-white">
        <thead class="table-light text-dark">
            <tr>
                <th>Nome</th>
                <th>Especialidade</th>
                <th>Status</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var funcionario in Model)
            {
                <tr>
                    <td>@funcionario.Nome</td>
                    <td>@funcionario.Especialidade</td>
                    <td>
                        @if (funcionario.Status?.ToLower() == "disponível")
                        {
                            <span class="badge bg-success px-3 py-2 text-uppercase">Disponível</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary px-3 py-2 text-uppercase">@funcionario.Status</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@funcionario.Id" class="btn btn-outline-primary btn-sm me-2">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@funcionario.Id" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash"></i> Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav class="mt-4">
        <ul class="pagination justify-content-center mb-0">
            @for (int i = 1; i <= (int)ViewBag.TotalPaginas; i++)
            {
                <li class="page-item @(i == (int)ViewBag.PaginaAtual ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, busca = ViewBag.BuscaNome })">@i</a>
                </li>
            }
        </ul>
    </nav>
   
</div>
<footer style="margin-top: 100px;"></footer>
