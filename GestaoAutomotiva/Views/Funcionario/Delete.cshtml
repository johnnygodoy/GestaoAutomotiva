@model GestaoAutomotiva.Models.Funcionario

<div class="container bg-dark bg-opacity-75 text-light rounded p-4 mt-4">

    <h2 class="text-danger">Excluir Funcionário</h2>

    <p>Tem certeza que deseja excluir o funcionário <strong>@Model.Nome</strong>?</p>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
