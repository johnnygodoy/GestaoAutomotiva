@model GestaoAutomotiva.Models.Funcionario

@{
    ViewData["Title"] = "Cadastrar Funcionário";
}

<div class="page-container mt-4 animate__animated animate__fadeInDown">
    <h2 class="text-white mb-4">
        <img src="~/images/Icones/funcionario.png" width="48" height="48" />
        Cadastrar Funcionário
    </h2>

    <form asp-action="Create" method="post">
        <div class="row mb-4">
            <!-- Nome -->
            <div class="col-md-4">
                <label asp-for="Nome" class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control text-uppercase" />
                <span class="text-danger small" asp-validation-for="Nome"></span>
            </div>

            <!-- Especialidade -->
            <div class="col-md-4">
                <label asp-for="Especialidade" class="form-label">Especialidade</label>
                <input asp-for="Especialidade" class="form-control  text-uppercase" />
                <span class="text-danger small" asp-validation-for="Especialidade"></span>
            </div>

            <!-- Status -->
            <div class="col-md-4">
                <label asp-for="Status" class="form-label">Status</label>
                <select asp-for="Status" class="form-control text-uppercase" id="statusSelect">
                    <option value="">Selecione</option>
                    <option value="Disponível">Disponível</option>
                    <option value="Ocupado">Ocupado</option>
                </select>
                <span class="text-danger small" asp-validation-for="Status"></span>
            </div>
        </div>

        <!-- Botões -->
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-outline-success px-4">
                <i class="bi bi-save"></i> Salvar
            </button>

            <a class="btn btn-outline-secondary px-4" asp-action="Index">
                <i class="bi bi-arrow-left-circle"></i> Cancelar
            </a>
        </div>
    </form>
</div>
<footer style="margin-top: 200px;"></footer>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const selectStatus = document.getElementById("statusSelect");

        function atualizarClasseSelect() {
            if (selectStatus.value !== "") {
                selectStatus.classList.add("select-light");
            } else {
                selectStatus.classList.remove("select-light");
            }
        }

        // Evento quando a página carregar
        document.addEventListener("DOMContentLoaded", atualizarClasseSelect);
        // Evento quando o usuário trocar a seleção
        selectStatus.addEventListener("change", atualizarClasseSelect);
    </script>
}

