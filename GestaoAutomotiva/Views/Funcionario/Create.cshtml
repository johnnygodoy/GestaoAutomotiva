@model GestaoAutomotiva.Models.Funcionario

@{
    ViewData["Title"] = "Cadastrar Funcionário";
}

<div class="container bg-dark bg-opacity-75 text-light rounded p-4 mt-4">

    <h2>@ViewData["Title"]</h2>

    <form asp-action="Create" method="post">
        <div class="row">
            <!-- Nome -->
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Nome"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span class="text-danger" asp-validation-for="Nome"></span>
                </div>
            </div>

            <!-- Especialidade -->
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Especialidade"></label>
                    <input asp-for="Especialidade" class="form-control" />
                    <span class="text-danger" asp-validation-for="Especialidade"></span>
                </div>
            </div>

            <!-- Status -->
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Status"></label>
                    <select asp-for="Status" class="form-control">
                        <option>Disponível</option>
                        <option>Ocupado</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Botões de Salvar e Cancelar -->
        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-outline-light mt-4">Salvar</button>
            <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
        </div>
    </form>
</div>