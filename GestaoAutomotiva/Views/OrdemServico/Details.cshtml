@model GestaoAutomotiva.Models.OrdemServico

@{
    ViewData["Title"] = "Detalhes da Ordem de Serviço";
}

<div class="page-container mt-4">
    <h2 class="text-white mb-4">
        <img src="~/images/Icones/ordemServico.png" width="48" height="48" />  @ViewData["Title"]
    </h2>

    <table class="table table-bordered text-white">
        <tbody>
            <tr>
                <th class="text-white">OS Nº:</th>
                <td class="text-white">@Model.Id</td>
            </tr>
            <tr>
                <th class="text-white">Data:</th>
                <td class="text-white">@Model.DataAbertura.ToString("dd/MM/yyyy")</td>
            </tr>
            <tr>
                <th class="text-white">Cliente:</th>
                <td class="text-white">@(Model.Atividade?.Carro?.Cliente?.Nome ?? "Não informado")</td>
            </tr>
            <tr>
                <th class="text-white">Carro:</th>
                <td class="text-white">
                    @(Model.Atividade?.Carro?.Modelo?.Nome?.ToUpper() ?? "Modelo não informado")
                    - @(Model.Atividade?.Carro?.IdCarro ?? "Sem código")
                </td>
            </tr>
            <tr>
                <th class="text-white">Funcionário:</th>
                <td class="text-white">
                    @(Model.Atividade?.Funcionario?.Nome?.ToUpper() ?? "Não informado")</td>
            </tr>
            <tr>
                <th class="text-white">Serviço:</th>
                <td class="text-white">@(Model.Atividade?.Servico?.Descricao ?? "Não informado")</td>
            </tr>
            <tr>
                <th class="text-white">Etapa Atual:</th>
                <td class="text-white">@(Model.EtapaAtual?? "Não informado") </td>
            </tr>
            <tr>
                <th class="text-white">Prioridade:</th>
                <td class="text-white">@(Model.Prioridade ?? "Não informado")</td>
            </tr>
            <tr>
                <th class="text-white">Tarefas:</th>
                <td class="text-white">@(Model.Tarefas ?? "Não informado") </td>
            </tr>
            <tr>
                <th class="text-white">Observações:</th>
                <td class="text-white">@(Model.Observacoes ?? "Não informado") </td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-end">
        <a asp-action="Index" class="btn btn-outline-light px-4">
            <i class="bi bi-arrow-left-circle"></i> Voltar
        </a>
    </div>
</div>
<footer style="margin-top: 200px;"></footer>