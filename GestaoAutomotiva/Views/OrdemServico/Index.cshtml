@model IEnumerable<GestaoAutomotiva.Models.OrdemServico>
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Ordens de Serviço";

    var listaFuncionarios = ViewBag.Funcionarios as List<SelectListItem> ?? new List<SelectListItem>();
    var listaClientes = ViewBag.Clientes as List<SelectListItem> ?? new List<SelectListItem>();
}


<div class="page-container mt-4 animate__animated animate__fadeInDown">

    @if (TempData["Mensagem"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mensagem"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
        </div>
    }

    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Erro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
        </div>
    }
    <h2 class="text-white mb-4">
        <img src="~/images/Icones/ordemServico.png" width="48" height="48" />  @ViewData["Title"]
    </h2>

    <form method="get" class="row g-2 mb-4">
        <div class="col-md-6">
            <input type="text" name="busca" class="form-control text-uppercase" placeholder="Buscar por cliente, carro, colaborador..." value="@Context.Request.Query["busca"]" />
        </div>

        <div class="col-md-4">
            <input type="date" name="dataBusca" class="form-control" value="@Context.Request.Query["dataBusca"]" />
        </div>

        <div class="col-md-2 d-flex gap-2">
            <button type="submit" class="btn btn-outline-light w-100">Pesquisar</button>
            <a asp-action="Index" class="btn btn-outline-secondary w-100">Limpar</a>
        </div>
    </form>







    <div class="d-flex gap-2 flex-wrap mb-3">
        <a asp-action="Create" class="btn btn-outline-success">
            <i class="bi bi-plus-circle"></i> Adicionar Nova Ordem Serviço
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle text-white">
            <thead class="table-light text-dark">
                <tr>
                    <th>OS nº</th>
                    <th>Data de Abertura</th>
                    <th>Colaborador</th>
                    <th>Carro</th>
                    <th>Cliente</th>
                    <th>Etapa</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var os in Model)
                {
                    var nomeFuncionario = os.Atividade?.Funcionario?.Nome;
                    if (string.IsNullOrEmpty(nomeFuncionario) && os.FuncionarioId.HasValue)
                        nomeFuncionario = listaFuncionarios.FirstOrDefault(f => f.Value == os.FuncionarioId.Value.ToString())?.Text;

                    var nomeCliente = os.Atividade?.Carro?.Cliente?.Nome;
                    if (string.IsNullOrEmpty(nomeCliente) && os.ClienteId.HasValue)
                        nomeCliente = listaClientes.FirstOrDefault(c => c.Value == os.ClienteId.Value.ToString())?.Text;

                    <tr>
                        <td>@os.Id</td>
                        <td>@os.DataAbertura.ToString("dd/MM/yyyy")</td>
                        <td>@(nomeFuncionario ?? "N/A")</td>
                        <td class="text-uppercase">
                            @if (os.Atividade?.Carro?.Modelo != null)
                            {
                                @os.Atividade.Carro.Modelo.Nome
                            }
                            else if (os.Atividade?.Carro != null)
                            {
                                @($"ID {os.Atividade.Carro.IdCarro}")
                            }
                            else if (os.CarroId.HasValue)
                            {
                                @($"ID {os.CarroId}")
                            }
                            else
                            {
                                @("N/A")
                            }
                        </td>
                        <td class="text-capitalize">@(nomeCliente ?? "N/A")</td>
                        <td class="text-uppercase">@(os.Atividade?.Etapa?.Nome ?? os.EtapaAtual ?? "N/A")</td>
                        <td class="text-center">
                            <div class="d-flex flex-wrap justify-content-center gap-1">
                                <a asp-action="Details" asp-route-id="@os.Id" class="btn btn-outline-purple btn-sm">
                                    <i class="bi bi-eye"></i> Visualizar
                                </a>
                                <a asp-action="Edit" asp-route-id="@os.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@os.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash-fill"></i> Excluir
                                </a>
                                <a asp-action="ExportarPdf" asp-route-id="@os.Id" class="btn btn-outline-success btn-sm">
                                    <i class="bi bi-file-earmark-pdf"></i> PDF
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <nav class="mt-4">
        <ul class="pagination justify-content-center mb-0">
            @for (int i = 1; i <= (int)ViewBag.TotalPaginas; i++)
            {
                <li class="page-item @(i == (int)ViewBag.PaginaAtual ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, busca = ViewBag.BuscaNome })">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
<footer style="margin-top: 100px;"></footer>
