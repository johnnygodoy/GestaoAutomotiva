@model IEnumerable<GestaoAutomotiva.Models.OrdemServico>
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Ordens de Serviço";

    // Essas variáveis são necessárias para evitar erro ao usar ViewBag com casting
    var listaFuncionarios = ViewBag.Funcionarios as List<SelectListItem> ?? new List<SelectListItem>();
    var listaClientes = ViewBag.Clientes as List<SelectListItem> ?? new List<SelectListItem>();
}

<h2 class="text-light">📋 Ordens de Serviço</h2>

<a asp-controller="OrdemServico" asp-action="Create" class="btn btn-outline-light mb-3">Nova Ordem de Serviço</a>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>OS nº</th>
            <th>Data de Abertura</th>
            <th>Colaborador</th>
            <th>Carro</th>
            <th>Cliente</th>
            <th>Etapa</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var os in Model)
        {
            var nomeFuncionario = os.Atividade?.Funcionario?.Nome;
            if (string.IsNullOrEmpty(nomeFuncionario) && os.FuncionarioId.HasValue)
            {
                nomeFuncionario = listaFuncionarios.FirstOrDefault(f => f.Value == os.FuncionarioId.Value.ToString())?.Text;
            }

            var nomeCliente = os.Atividade?.Carro?.Cliente?.Nome;
            if (string.IsNullOrEmpty(nomeCliente) && os.ClienteId.HasValue)
            {
                nomeCliente = listaClientes.FirstOrDefault(c => c.Value == os.ClienteId.Value.ToString())?.Text;
            }

            <tr>
                <td>@os.Id</td>
                <td>@os.DataAbertura.ToString("dd/MM/yyyy")</td>
                <td>@(nomeFuncionario ?? "N/A")</td>
                <td>
                    @if (os.Atividade?.Carro != null)
                    {
                        @($"{os.Atividade.Carro.Modelo} ({os.Atividade.Carro.IdCarro})")
                    }
                    else if (os.CarroId.HasValue)
                    {
                        @($"ID {os.CarroId}")
                    }
                    else
                    {
                        @("N/A")
                    }
                </td>
                <td>@(nomeCliente ?? "N/A")</td>
                <td>@(os.Atividade?.Etapa?.Nome ?? os.EtapaAtual ?? "N/A")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@os.Id" class="btn btn-sm btn-primary">Visualizar</a>
                    <a asp-action="Edit" asp-route-id="@os.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@os.Id" class="btn btn-sm btn-danger">Excluir</a>
                    <a asp-action="ExportarPdf" asp-route-id="@os.Id" class="btn btn-sm btn-success">PDF</a>
                </td>
            </tr>
        }
    </tbody>
</table>
