@model GestaoAutomotiva.Models.OrdemServico
@{
    ViewData["Title"] = "Nova Ordem de Serviço";
}

<div class="page-container mt-4">
    <h2 class="text-white mb-4">
        <img src="~/images/Icones/ordemServico.png" width="48" height="48" /> @ViewData["Title"]
    </h2>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="AtividadeId" />

        @if (Model?.Id > 0)
        {
            <div class="row mb-3">
                <div class="col-md-3">
                    <label class="form-label">OS Nº</label>
                    <input class="form-control text-uppercase" readonly value="@Model.Id" />
                </div>
            </div>
        }

        <div class="row mb-3">
            <div class="col-md-3">
                <label class="form-label">ID Serviço</label>
                <input class="form-control text-uppercase bg-dark text-white" readonly
                       value="@Model.Atividade?.Servico?.Id.ToString() ?? " N /A"" />
            </div>

            <div class="col-md-3">
                <label asp-for="DataAbertura" class="form-label">Data de Abertura</label>
                <input asp-for="DataAbertura" class="form-control text-uppercase" readonly />
            </div>

            <div class="col-md-3">
                <label asp-for="EtapaAtual" class="form-label">Etapa Atual</label>
                <input asp-for="EtapaAtual" class="form-control text-uppercase" />
            </div>

            <div class="col-md-3">
                <label asp-for="Prioridade" class="form-label">Prioridade</label>
                <select asp-for="Prioridade" class="form-control text-uppercase">
                    <option value="">Selecione</option>
                    <option>Normal</option>
                    <option>Alta</option>
                    <option>Urgente</option>
                    <option>Máxima</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <label asp-for="FuncionarioId" class="form-label">Funcionário</label>
                <select asp-for="FuncionarioId" class="form-control text-uppercase"
                        asp-items="ViewBag.Funcionarios ?? new List<SelectListItem>()">
                    <option value="">Selecione o funcionário</option>
                </select>
            </div>

            <div class="col-md-3">
                <label asp-for="CarroId" class="form-label">Modelo do Carro</label>
                <select asp-for="CarroId" class="form-control text-uppercase"
                        asp-items="ViewBag.Carros ?? new List<SelectListItem>()">
                    <option value="">Selecione o modelo</option>
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label">Código do Carro</label>
                <input class="form-control text-uppercase bg-dark text-white" readonly
                       value="@Model.Atividade?.Carro?.IdCarro ?? " N /A"" />
            </div>

            <div class="col-md-3">
                <label asp-for="ClienteId" class="form-label">Cliente</label>
                <select asp-for="ClienteId" class="form-control text-uppercase"
                        asp-items="ViewBag.Clientes ?? new List<SelectListItem>()">
                    <option value="">Selecione o cliente</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Tarefas" class="form-label">Tarefas</label>
                <textarea asp-for="Tarefas" class="form-control text-uppercase" rows="3"></textarea>
            </div>
            <div class="col-md-6">
                <label asp-for="Observacoes" class="form-label">Observações</label>
                <textarea asp-for="Observacoes" class="form-control text-uppercase" rows="3"></textarea>
            </div>
        </div>

        <div class="mt-4">
            <h5 class="text-light mb-3">Conferência</h5>
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="Almoxarifado" class="form-label">Almoxarifado</label>
                    <input asp-for="Almoxarifado" class="form-control text-uppercase" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Funcionário</label>
                    <input class="form-control text-uppercase" placeholder="Assinatura / Data" />
                </div>
                <div class="col-md-4">
                    <label asp-for="Inspetor" class="form-label">Inspetor</label>
                    <input asp-for="Inspetor" class="form-control text-uppercase" />
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-outline-success px-4">
                <i class="bi bi-save"></i> Salvar
            </button>

            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                <i class="bi bi-arrow-left-circle"></i> Cancelar
            </a>
        </div>
    </form>
</div>
