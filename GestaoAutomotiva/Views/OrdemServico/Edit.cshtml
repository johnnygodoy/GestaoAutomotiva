@model GestaoAutomotiva.Models.OrdemServico

@{
    ViewData["Title"] = "Editar Ordem de Serviço";
}

<div class="page-container mt-4">
    <h2 class="text-white mb-4">
        <img src="~/images/Icones/ordemServico.png" width="48" height="48" />  @ViewData["Title"]
    </h2>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="AtividadeId" />

        <div class="row mb-3">
            <!-- ID do Serviço -->
            <div class="col-md-3">
                <label class="form-label text-white">ID Serviço</label>
                <input class="form-control select-light" readonly value="@Model.Atividade?.Servico?.Id" />
            </div>

            <!-- Data de Abertura -->
            <div class="col-md-3">
                <label asp-for="DataAbertura" class="form-label text-white">Data de Abertura</label>
                <input asp-for="DataAbertura" class="form-control select-light" readonly />
            </div>

            <!-- Etapa Atual -->
            <div class="col-md-3">
                <label asp-for="EtapaAtual" class="form-label text-white">Etapa Atual</label>
                <input asp-for="EtapaAtual" class="form-control select-light"/>
            </div>

            <!-- Prioridade -->
            <div class="col-md-3">
                <label asp-for="Prioridade" class="form-label text-white">Prioridade</label>
                <select asp-for="Prioridade" class="form-control select-light">
                    <option value="">Selecione</option>
                    <option>Normal</option>
                    <option>Alta</option>
                    <option>Urgente</option>
                    <option>Máxima</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <!-- Funcionário -->
            <div class="col-md-3">
                <label asp-for="FuncionarioId" class="form-label text-white">Funcionário</label>
                <select asp-for="FuncionarioId" class="form-control select-light"
                        asp-items="ViewBag.Funcionarios ?? new List<SelectListItem>()">
                    <option value="">Selecione</option>
                </select>
            </div>

            <!-- Modelo do Carro -->
            <div class="col-md-3">
                <label asp-for="CarroId" class="form-label text-white">Modelo do Carro</label>
                <select asp-for="CarroId" class="form-control select-light"
                        asp-items="ViewBag.Carros ?? new List<SelectListItem>()">
                    <option value="">Selecione</option>
                </select>
            </div>

            <!-- Código do Carro -->
            <div class="col-md-3">
                <label class="form-label text-white">Código do Carro</label>
                <input class="form-control select-light" readonly value="@Model.Atividade?.Carro?.IdCarro" />
            </div>

            <!-- Cliente -->
            <div class="col-md-3">
                <label asp-for="ClienteId" class="form-label text-white">Cliente</label>
                <select asp-for="ClienteId" class="form-control select-light"
                        asp-items="ViewBag.Clientes ?? new List<SelectListItem>()">
                    <option value="">Selecione</option>
                </select>
            </div>
        </div>

        <!-- Tarefas -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Tarefas" class="form-label text-white">Tarefas</label>
                <textarea asp-for="Tarefas" class="form-control select-light" rows="6"></textarea>
            </div>

            <div class="col-md-6">
                <label asp-for="Observacoes" class="form-label text-white">Observações</label>
                <textarea asp-for="Observacoes" class="form-control select-light" rows="6"></textarea>
            </div>
        </div>

        <!-- Conferência -->
        <div class="mt-4">
            <h5 class="text-light mb-3">
                <i class="bi bi-clipboard-check text-success"></i> Conferência
            </h5>
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="Almoxarifado" class="form-label text-white">Almoxarifado</label>
                    <input asp-for="Almoxarifado" class="form-control bg-dark text-white" />
                </div>
                <div class="col-md-4">
                    <label class="form-label text-white">Funcionário</label>
                    <input class="form-control bg-dark text-white" placeholder="Assinatura / Data" />
                </div>
                <div class="col-md-4">
                    <label asp-for="Inspetor" class="form-label text-white">Inspetor</label>
                    <input asp-for="Inspetor" class="form-control bg-dark text-white" />
                </div>
            </div>
        </div>

        <!-- Botões -->
        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-outline-success px-4">
                <i class="bi bi-save"></i> Salvar Ordem de Serviço
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                <i class="bi bi-arrow-left-circle"></i> Cancelar
            </a>
        </div>
    </form>
</div>
<footer style="margin-top: 200px;"></footer>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
