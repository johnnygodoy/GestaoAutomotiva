@model GestaoAutomotiva.Models.OrdemServico


<h2 class="text-light">Editar Ordem de Serviço</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="AtividadeId" />

    <div class="mb-3 col-md-2">
        <label class="text-white">ID Serviço</label>
        <input class="form-control bg-dark text-white" readonly value="@Model.Atividade?.Servico?.Id" />
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label asp-for="DataAbertura" class="form-label text-white">Data de Abertura</label>
            <input asp-for="DataAbertura" class="form-control bg-dark text-white" readonly />
        </div>
        <div class="col-md-4">
            <label asp-for="EtapaAtual" class="form-label text-white">Etapa Atual</label>
            <input asp-for="EtapaAtual" class="form-control bg-dark text-white" readonly />
        </div>
        <div class="col-md-4">
            <label asp-for="Prioridade" class="form-label text-white">Prioridade</label>
            <select asp-for="Prioridade" class="form-control bg-dark text-white">
                <option value="">Selecione</option>
                <option>Normal</option>
                <option>Alta</option>
                <option>Urgente</option>
                <option>Máxima</option>
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="FuncionarioId" class="text-white">Funcionário</label>
            <select asp-for="FuncionarioId" class="form-control bg-dark text-white"
                    asp-items="ViewBag.Funcionarios ?? new List<SelectListItem>()">
                <option value="">Selecione o funcionário</option>
            </select>
        </div>
        <div class="col-md-6">
            <label asp-for="CarroId" class="text-white">Modelo do Carro</label>
            <select asp-for="CarroId" class="form-control bg-dark text-white"
                    asp-items="ViewBag.Carros ?? new List<SelectListItem>()">
                <option value="">Selecione o modelo</option>
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label class="text-white">Código do Carro</label>
            <input class="form-control bg-dark text-white" readonly value="@Model.Atividade?.Carro?.IdCarro" />
        </div>
        <div class="col-md-6">
            <label asp-for="ClienteId" class="text-white">Cliente</label>
            <select asp-for="ClienteId" class="form-control bg-dark text-white"
                    asp-items="ViewBag.Clientes ?? new List<SelectListItem>()">
                <option value="">Selecione o Cliente</option>
            </select>
        </div>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Tarefas" class="form-label text-white">Tarefas</label>
        <textarea asp-for="Tarefas" class="form-control bg-dark text-white" rows="3"></textarea>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Observacoes" class="form-label text-white">Observações</label>
        <textarea asp-for="Observacoes" class="form-control bg-dark text-white" rows="5"></textarea>
    </div>

    <div class="mt-4">
        <h5 class="text-light">Conferência</h5>
        <div class="row">
            <div class="col-md-4">
                <label class="text-white">Almoxarifado</label>
                <input asp-for="Almoxarifado" class="form-control bg-dark text-white" />
            </div>
            <div class="col-md-4">
                <label class="text-white">Funcionário</label>
                <input class="form-control bg-dark text-white" placeholder="Assinatura / Data" />
            </div>
            <div class="col-md-4">
                <label class="text-white">Inspetor</label>
                <input asp-for="Inspetor" class="form-control bg-dark text-white" />
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-success">Salvar Ordem de Serviço</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>


