@model IEnumerable<GestaoAutomotiva.Models.Servico>


<div class="page-container mt-4 animate__animated animate__fadeInDown">
    <h2 class="text-white mb-4">
        <img src="~/images/Icones/servico.png" width="48" height="48" /> Serviços
    </h2>

    <div class="d-flex gap-2 flex-wrap mb-3">
        <a asp-action="Create" class="btn btn-outline-success">
            <i class="bi bi-plus-circle"></i> Adicionar Novo Serviço
        </a>
    </div>

    <form method="get" class="mb-3 d-flex gap-2 flex-wrap">
        <input type="text" name="busca" class="form-control text-uppercase" placeholder="Buscar por descrição ou tipo..." value="@ViewBag.BuscaNome" />
        <button type="submit" class="btn btn-outline-light">Pesquisar</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
    </form>

    <table class="table table-dark table-hover align-middle text-white">
        <thead class="table-light text-dark">
            <tr>
                <th>Descrição</th>
                <th>Tipo</th>
                <th>Estimativa (dias)</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var servico in Model)
            {
                <tr>
                    <td>@servico.Descricao</td>
                    <td>@servico.Tipo</td>
                    <td>@servico.EstimativaDias</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@servico.Id" class="btn btn-outline-primary btn-sm me-2">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@servico.Id" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash"></i> Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav class="mt-4">
        <ul class="pagination justify-content-center mb-0">
            @for (int i = 1; i <= (int)ViewBag.TotalPaginas; i++)
            {
                <li class="page-item @(i == (int)ViewBag.PaginaAtual ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, busca = ViewBag.BuscaNome })">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
