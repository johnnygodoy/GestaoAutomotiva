@inject LicencaService LicencaService
@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString()?.ToLower();
    var action = ViewContext.RouteData.Values["action"]?.ToString()?.ToLower();
    var isLoginPage = controller == "login" && (action == "index" || action == "cadastrar");
}


<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestaoAutomotiva</title>

    <!-- Estilos -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GestaoAutomotiva.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />


    <!-- jQuery (uma única vez) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- jQuery Mask Plugin (para máscaras, se necessário globalmente) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
</head>

<body>

    @* Alerta de licença visível em todas as páginas *@
    @if (LicencaService.EstaEmModoTeste)
    {
        <div class="alert @(LicencaService.LicencaExpirada ? "alert-danger" : "alert-warning") text-center mb-0 rounded-0">
            @LicencaService.MensagemLicenca()
        </div>
    }

    @if (!isLoginPage)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" href="https://www.furlanautomobile.com/" target="_blank">
                        <img src="~/images/logo-furlan.png" alt="Furlan" style="height: 30px;" />
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse justify-content-center">

                        <div class="d-flex justify-content-center w-100">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-light text-center d-flex flex-column align-items-center px-1" asp-controller="Funcionario" asp-action="Index">
                                        <img src="~/images/Icones/funcionario.png" width="24" height="24" />
                                        <small>Funcionários</small>
                                    </a>
                                </li>                               
                                <li class="nav-item">
                                    <a class="nav-link text-light text-center d-flex flex-column align-items-center px-2" asp-controller="Motor" asp-action="Index">
                                        <img src="~/images/Icones/motor.png" width="24" height="24" />
                                        <small>Cadastro/Motor</small>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light text-center d-flex flex-column align-items-center px-2" asp-controller="Servico" asp-action="Index">
                                        <img src="~/images/Icones/servico.png" width="24" height="24" />
                                        <small>Serviços</small>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light text-center d-flex flex-column align-items-center px-2" asp-controller="Carro" asp-action="Index">
                                        <img src="~/images/Icones/carro_cliente.png" width="24" height="24" />
                                        <small>Carro/Cliente</small>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light text-center d-flex flex-column align-items-center px-2" asp-controller="Atividade" asp-action="Index">
                                        <img src="~/images/Icones/atividades.png" width="24" height="24" />
                                        <small>Atividades</small>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light text-center d-flex flex-column align-items-center px-2" asp-controller="Esteira" asp-action="Esteira">
                                        <img src="~/images/Icones/esteira.png" width="24" height="24" />
                                        <small>Esteira</small>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light text-center d-flex flex-column align-items-center px-2" asp-controller="Planejamento" asp-action="Index">
                                        <img src="~/images/Icones/planejamento.png" width="24" height="24" />
                                        <small>Planejamento</small>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light text-center d-flex flex-column align-items-center px-2" asp-controller="GraficoCarroEtapa" asp-action="Index">
                                        <img src="~/images/Icones/etapas.png" width="24" height="24" />
                                        <small>Gráfico Etapas</small>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light text-center d-flex flex-column align-items-center px-2" asp-controller="OrdemServico" asp-action="Index">
                                        <img src="~/images/Icones/ordemServico.png" width="24" height="24" />
                                        <small>Ordem Serviço</small>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light text-center d-flex flex-column align-items-center px-2" asp-controller="HistoricoAtividade" asp-action="Index">
                                        <img src="~/images/Icones/historico.png" width="24" height="24" />
                                        <small>Histórico</small>
                                    </a>
                                </li>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-light text-center d-flex flex-column align-items-center px-2"
                                           href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <img src="~/images/Icones/usuarios.png" width="24" height="24" />
                                            <small>Usuário</small>
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark text-center" aria-labelledby="userDropdown">
                                            <li>
                                                <a class="dropdown-item" asp-controller="Login" asp-action="AlterarSenha">
                                                    <i class="fas fa-key"></i> Alterar Senha
                                                </a>
                                            </li>

                                            @if (User.IsInRole("Admin"))
                                            {
                                                <li><hr class="dropdown-divider" /></li>
                                                <li>
                                                    <a class="dropdown-item" asp-controller="Login" asp-action="Cadastrar">
                                                        <i class="fas fa-user-plus"></i> Cadastrar Usuário
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item text-danger" asp-controller="Login" asp-action="GerenciarUsuarios">
                                                        <i class="fas fa-user-cog"></i> Gerenciar Usuários
                                                    </a>
                                                </li>
                                            }

                                            <li><hr class="dropdown-divider" /></li>
                                            <li>
                                                <a class="dropdown-item" asp-controller="Login" asp-action="Logout">
                                                    <i class="fas fa-sign-out-alt"></i> Sair
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                }


                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="mb-5"></div>

    @if (!isLoginPage)
    {
        <footer class="border-top footer text-center text-light py-3">
            <div class="container">
                &copy; 2025 - <strong>Gestão Automotiva</strong> —
                <a asp-controller="Home" asp-action="Privacy" class="text-light text-decoration-underline">Privacidade</a>
            </div>
        </footer>
    }

    <!-- Scripts do Bootstrap e site -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Carrega scripts específicos da view (como validação, JS adicional, etc.) *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
