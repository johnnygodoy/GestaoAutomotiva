@model GestaoAutomotiva.Models.AlterarSenhaViewModel

@{
    ViewData["Title"] = "Alterar Senha";
}

@* MENSAGENS *@
@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensagem"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Erro"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}

<div class="page-container mt-4 animate__animated animate__fadeInDown">

 

    @* TÍTULO *@
    <h2 class="text-white mb-4 d-flex align-items-center gap-2">
        <i class="bi bi-key"></i> @ViewData["Title"]
    </h2>

    <form asp-action="AlterarSenha" method="post">
        <div class="row mb-4">
            <div class="col-md-6">
                <label asp-for="SenhaAtual" class="form-label">Senha Atual</label>
                <input asp-for="SenhaAtual" type="password" class="form-control" />
                <span asp-validation-for="SenhaAtual" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="NovaSenha" class="form-label">Nova Senha</label>
                <input asp-for="NovaSenha" type="password" class="form-control" />
                <span asp-validation-for="NovaSenha" class="text-danger small"></span>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <label asp-for="ConfirmarSenha" class="form-label">Confirmar Nova Senha</label>
                <input asp-for="ConfirmarSenha" type="password" class="form-control" />
                <span asp-validation-for="ConfirmarSenha" class="text-danger small"></span>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-outline-success px-4">
                <i class="bi bi-save"></i> Salvar
            </button>

            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary px-4">
                <i class="bi bi-arrow-left-circle"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
