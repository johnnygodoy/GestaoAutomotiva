@model GestaoAutomotiva.Models.Usuario

@{
    ViewData["Title"] = "Cadastrar Novo Usuário";
}

<h2 class="text-light">Novo Usuário</h2>

<form asp-action="Cadastrar" method="post" class="col-md-6">
    <div class="form-group">
        <label asp-for="Nome" class="text-light">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Email" class="text-light">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Senha" class="text-light">Senha</label>
        <input asp-for="Senha" class="form-control" type="password" />
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Tipo" class="text-light">Tipo de Acesso</label>
        <select asp-for="Tipo" class="form-control">
            <option value="Usuario">Usuário</option>
            <option value="Admin">Administrador</option>
        </select>
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>

    <button class="btn btn-success mt-3">Cadastrar</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary mt-3">Voltar</a>
</form>
