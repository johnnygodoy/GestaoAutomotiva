@{
    Layout = null;
    ViewData["Title"] = "Login - Gestão Automotiva";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap e animações -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <style>
        body {
            background-image: url('/images/shelby-cobra.jpg'); /* troque pelo caminho da imagem */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            backdrop-filter: blur(12px);
            background-color: rgba(33, 37, 41, 0.65); /* vidro fosco escuro */
            padding: 2.5rem;
            border-radius: 1rem;
            color: white;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.6);
        }

            .login-card h3 {
                font-weight: bold;
                text-align: center;
                margin-bottom: 1.5rem;
            }

        .login-logo {
            display: block;
            margin: 0 auto 20px auto;
            height: 60px;
        }

        label {
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="login-card animate__animated animate__fadeInDown">
        <img src="~/images/logo-furlan.png" alt="Logo" class="login-logo" />
        <h3><i class="bi bi-person-circle me-2"></i>Login</h3>

        <form method="post">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" class="form-control" placeholder="Digite seu email" required />
            </div>
            <div class="mb-3">
                <label for="senha" class="form-label">Senha</label>
                <input type="password" name="senha" class="form-control" placeholder="Digite sua senha" required />
            </div>

            @if (ViewBag.Erro != null)
            {
                <div class="alert alert-danger">@ViewBag.Erro</div>
            }

            <button type="submit" class="btn btn-primary w-100 mt-2">
                <i class="bi bi-box-arrow-in-right"></i> Entrar
            </button>
        </form>
    </div>
</body>
</html>
<footer style="margin-top: 200px;"></footer>