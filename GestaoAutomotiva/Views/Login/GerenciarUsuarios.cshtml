@model List<GestaoAutomotiva.Models.Usuario>

@{
    ViewData["Title"] = "Gerenciar Usuários";
}


<div class="page-container mt-4 animate__animated animate__fadeInDown">
     
    @* MENSAGENS *@
    @if (TempData["Mensagem"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mensagem"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
        </div>
    }

    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Erro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
        </div>
    }

    @* TÍTULO *@
    <h2 class="text-white mb-4 d-flex align-items-center gap-2">
        <img src="~/images/Icones/usuarios.png" width="48" height="48" />
        @ViewData["Title"]
    </h2>

    @* BOTÃO DE AÇÃO (opcional) *@
    <div class="d-flex gap-2 flex-wrap mb-3">
        <a class="btn btn-outline-success" asp-controller="Login" asp-action="Cadastrar">
            <i class="bi bi-plus-circle"></i> Cadastrar Novo Usuário
        </a>
    </div>

    @* FORMULÁRIO DE PESQUISA *@
    <form method="get" class="row g-2 mb-4">
        <div class="col-md-8">
            <input type="text" name="busca" class="form-control text-uppercase" placeholder="Buscar por nome ou email..." value="@Context.Request.Query["busca"]" />
        </div>

        <div class="col-md-4 d-flex gap-2">
            <button type="submit" class="btn btn-outline-light w-100">
                <i class="bi bi-search"></i> Pesquisar
            </button>
            <a asp-action="GerenciarUsuarios" class="btn btn-outline-secondary w-100">Limpar</a>
        </div>
    </form>

    @* TABELA *@
    <form asp-action="ExcluirVarios" method="post">
        <table class="table table-dark table-hover align-middle text-white">
            <thead class="table-light text-dark">
                <tr>
                    <th class="text-center"><input type="checkbox" id="checkAll" /></th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Tipo</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td class="text-center">
                            <input type="checkbox" name="idsSelecionados" value="@usuario.Id" />
                        </td>
                        <td>@usuario.Nome</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.Tipo</td>
                        <td class="text-center">
                            <a asp-action="Excluir" asp-route-id="@usuario.Id" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-outline-danger">
                <i class="bi bi-trash-fill"></i> Excluir Selecionados
            </button>
        </div>
    </form>
</div>
<footer style="margin-top: 200px;"></footer>
@section Scripts {
    <script>
        document.getElementById("checkAll").addEventListener("click", function () {
            var checkboxes = document.querySelectorAll("input[name='idsSelecionados']");
            for (var checkbox of checkboxes) {
                checkbox.checked = this.checked;
            }
        });
    </script>
}
